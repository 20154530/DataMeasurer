<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Wifilistitem_textview">
        <item name="android:layout_width">0pt</item>
        <item name="android:paddingLeft">4pt</item>
        <item name="android:paddingTop">2pt</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:textSize">6pt</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">#ccc</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="MainActWifiInfo_title">
        <item name="android:paddingTop">2pt</item>
        <item name="android:layout_width">24pt</item>
        <item name="android:paddingLeft">4pt</item>
        <item name="android:textSize">6pt</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MainActEditText" >
        <item name="android:layout_width">0pt</item>
        <item name="android:layout_height">0pt</item>
        <item name="android:textSize">6pt</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorListBG</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="MainActEditTextLabel">
        <item name="android:layout_width">0pt</item>
        <item name="android:layout_height">0pt</item>
        <item name="android:textSize">4pt</item>
        <item name="android:paddingLeft">2pt</item>
        <item name="android:paddingRight">2pt</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/part_edittext_bg</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    
    <style name="MainActToggleButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/part_togglebg</item>
        <item name="android:layout_width">0pt</item>
        <item name="android:layout_height">0pt</item>
    </style>

</resources>
